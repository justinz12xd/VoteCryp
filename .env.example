# Docker Compose environment
# Set these in a .env file at repo root for docker compose

# Backend security
JWT_SECRET=supersecretjwt
AES_KEY=0123456789abcdef0123456789abcdef

# Blockchain connection (pick one option below)
# 1) Local Hardhat node
RPC_URL=http://host.docker.internal:8545
# PRIVATE_KEY is required to sign txs (Hardhat default accounts work)
# PRIVATE_KEY=
# CONTRACT_ADDRESS will be filled after you deploy your contract locally
# CONTRACT_ADDRESS=

# 2) Lisk Sepolia or other network
# RPC_URL=https://rpc.sepolia-api.lisk.com
# PRIVATE_KEY=0xYOUR_PRIVATE_KEY
# CONTRACT_ADDRESS=0xYOUR_DEPLOYED_CONTRACT

# Frontend
NEXT_PUBLIC_GO_API_URL=http://localhost:8080
BLOCKCHAIN_SVC_URL=http://localhost:4002
